{
  "name": "lambda-typescript",
  "version": "1.0.0",
  "description": "AWS Lambda functions in TypeScript with Serverless & MongoDB",
  "main": "handler.js",
  "scripts": {
    "analyse": "npm run lint && npm run test",
    "clean": "rimraf .build .serverless .nyc_output coverage",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prebuild": "npm run clean && npm run analyse",
    "build": "serverless package",
    "predeploy": "npm run clean && npm run analyse",
    "deploy": "serverless deploy",
    "deploy:init": "serverless create_domain",
    "postdeploy": "npm run test:integration",
    "lint": "tslint --project . --format verbose",
    "start": "serverless offline start --skipCacheInvalidation",
    "pretest": "npm run clean",
    "test": "nyc mocha",
    "test:integration": "mocha --opts ./test/integration/mocha.opts",
    "serverless": "serverless",
    "tsc": "tsc",
    "tslint": "tslint"
  },
  "keywords": [
    "aws",
    "lambda",
    "serverless",
    "tslint",
    "typescript",
    "MongoDB"
  ],
  "author": "Thanh Truong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ttruongatl/aws-lambda-boilerplate"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.11",
    "@types/chai": "^4.1.4",
    "@types/chance": "^1.0.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.115",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.3",
    "@types/node": "^10.5.4",
    "@types/owasp-password-strength-test": "^1.3.0",
    "@types/request": "^2.47.1",
    "@types/request-promise-native": "^1.0.15",
    "aws-sdk": "^2.286.2",
    "chai": "^4.1.2",
    "chance": "^1.0.16",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "request-promise-native": "^1.0.5",
    "rimraf": "^2.6.2",
    "serverless": "^1.29.1",
    "serverless-aws-documentation": "^1.1.0",
    "serverless-domain-manager": "^2.6.0",
    "serverless-offline": "^3.25.6",
    "serverless-plugin-typescript": "^1.1.5",
    "serverless-stack-output": "^0.2.3",
    "source-map-support": "^0.5.6",
    "ts-mockito": "^2.3.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "generate-password": "^1.4.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "mockgoose": "^7.3.5",
    "mongoose": "^5.2.5",
    "owasp-password-strength-test": "^1.3.0",
    "should": "^13.2.3",
    "typescript-ioc": "^1.2.4",
    "typescript-rest": "^1.6.1"
  }
}
